<assembly>
	<id>bin-release</id>
	<formats>
		<format>tar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<filtered>true</filtered>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<fileMode>750</fileMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>src/main/config</directory>
			<filtered>true</filtered>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<fileMode>740</fileMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>src/main/result</directory>
			<filtered>true</filtered>
			<outputDirectory>result</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
			<fileMode>740</fileMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<!--  files>
		<file>
			<source>src/main/resources/messages-default.properties</source>
			<outputDirectory>/config</outputDirectory>
			<destName>messages.properties</destName>
		</file>
	</files-->

	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
			<fileMode>644</fileMode>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<scope>provided</scope>
			<outputDirectory>lib</outputDirectory>
			<fileMode>644</fileMode>
			<excludes>
			</excludes>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<scope>test</scope>
			<outputDirectory>lib</outputDirectory>
			<fileMode>644</fileMode>
			<includes>
				<include>javax.transaction:jta</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>